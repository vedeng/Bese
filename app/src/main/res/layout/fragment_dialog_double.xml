<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/color_eee"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:text="双按钮弹窗"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:text="双按钮倒计时弹窗"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_dialog_timer_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="6dp"
                        android:background="@drawable/shape_r12"
                        android:backgroundTint="@color/color_fff"
                        android:text="Title\n倒计时"/>

                    <TextView
                        android:id="@+id/tv_dialog_timer_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="6dp"
                        android:background="@drawable/shape_r12"
                        android:backgroundTint="@color/color_fff"
                        android:layout_marginStart="10dp"
                        android:text="Message\n倒计时"/>

                    <TextView
                        android:id="@+id/tv_dialog_timer_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="6dp"
                        android:background="@drawable/shape_r12"
                        android:backgroundTint="@color/color_fff"
                        android:layout_marginStart="10dp"
                        android:text="Cancel\n倒计时"/>

                    <TextView
                        android:id="@+id/tv_dialog_timer_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="6dp"
                        android:background="@drawable/shape_r12"
                        android:backgroundTint="@color/color_fff"
                        android:layout_marginStart="10dp"
                        android:text="Enter\n倒计时"/>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/base_content" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>