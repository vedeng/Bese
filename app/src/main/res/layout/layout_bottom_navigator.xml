<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/color_fff"
    android:clipChildren="false"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_tab_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/tab"/>

        <TextView
            android:id="@+id/tv_tab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_tab_home"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="组件"
            android:textColor="@color/color_333"
            android:textSize="12sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_tab_category"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/tab"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_tab_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_tab_category"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="工具"
            android:textColor="@color/color_333"
            android:textSize="12sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_tab_customer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/add_fill"
            android:background="@drawable/rct_sld_r30"
            android:backgroundTint="@color/color_fff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-15dp"/>

        <TextView
            android:id="@+id/tv_tab_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_tab_customer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="+"
            android:textColor="@color/color_333"
            android:textSize="12sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_tab_purchase"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/tab"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_tab_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_tab_purchase"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="社区"
            android:textColor="@color/color_333"
            android:textSize="12sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_tab_center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/tab"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_tab_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_tab_center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="关于"
            android:textColor="@color/color_333"
            android:textSize="12sp"/>

    </RelativeLayout>

</merge>