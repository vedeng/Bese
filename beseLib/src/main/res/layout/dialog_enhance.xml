<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_enhance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/rct_sld_r10"
        android:backgroundTint="@color/color_fff"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/dialog_enhance_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/color_000"/>

        <TextView
            android:id="@+id/dialog_enhance_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="14sp"
            android:textColor="@color/color_000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <com.bese.widget.button.BorderTextButton
                android:id="@+id/btn_enhance_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                app:borderButtonRadius="3dp"
                app:borderButtonBgColor="@color/color_eee"
                app:borderLineSize="1px"
                android:text="取消"
                android:textSize="15sp"
                android:textColor="@color/color_999"/>

            <View
                android:id="@+id/btn_space"
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <com.bese.widget.button.BorderTextButton
                android:id="@+id/btn_enhance_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                app:borderButtonRadius="3dp"
                app:borderButtonBgColor="#cc3333"
                app:borderLineSize="1px"
                android:text="删除"
                android:textSize="15sp"
                android:textColor="@color/color_333"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
